<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="categorie_view_form" model="ir.ui.view">
        <field name="name">categorie_form</field>
        <field name="model">categorie</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <group>
                        <field name="approuver" />
                    </group>
                    <group>
                        <field name="name" />
                    </group>
                    <group>
                        <field name="nocategorie" />
                    </group>
                    <group>
                        <field name="supprimer" />
                    </group>
                    <group>
                        <field name="titrecategorie" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="categorie_view_tree" model="ir.ui.view">
        <field name="name">categorie_tree</field>
        <field name="model">categorie</field>
        <field name="arch" type="xml">
            <tree>
                <field name="approuver" />
                <field name="name" />
                <field name="nocategorie" />
                <field name="supprimer" />
                <field name="titrecategorie" />
            </tree>
        </field>
    </record>

    <act_window
        id="categorie_categorie_action_view_action_window"
        name="categorie_action_view"
        res_model="categorie"
        view_mode="list,form"
    />
</odoo>
